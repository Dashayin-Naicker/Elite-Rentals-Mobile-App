<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <ScrollView
        android:id="@+id/scrollForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Lease"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <Spinner
                android:id="@+id/tenantSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="?android:textColorSecondary"
                android:popupBackground="@android:color/white"/>

            <Spinner
                android:id="@+id/propSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="?android:textColorSecondary"
                android:popupBackground="@android:color/white"/>

            <EditText
                android:id="@+id/startEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date (yyyy-MM-dd)"
                android:layout_marginBottom="12dp"
                android:textColor="?android:textColorPrimary"/>

            <EditText
                android:id="@+id/endEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Date (yyyy-MM-dd)"
                android:layout_marginBottom="12dp"
                android:textColor="?android:textColorPrimary"/>

            <EditText
                android:id="@+id/depositEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deposit"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp"
                android:textColor="?android:textColorPrimary"/>

            <Button
                android:id="@+id/btnAssign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign Lease"
                android:backgroundTint="#2979FF"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="6"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navManageProperties"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/property_manage"
            android:contentDescription="Manage Properties"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/navManageTenants"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/tenant"
            android:contentDescription="Manage Tenants"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/navAssignLeases"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/view_lease"
            android:contentDescription="Assign Leases"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/navAssignMaintenance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/maintenance"
            android:contentDescription="Assign Maintenance"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/navRegisterTenant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/caretaker_assign"
            android:contentDescription="Register Tenant"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/navGenerateReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/img_1"
            android:contentDescription="Generate Report"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
