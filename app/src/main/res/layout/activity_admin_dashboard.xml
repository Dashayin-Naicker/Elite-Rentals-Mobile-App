<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">


            <!-- Dashboard Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:text="Admin Dashboard"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Small spacing between title and icons -->
            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <!-- Notifications Icon -->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/notifications"
                android:contentDescription="@string/notifications"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/settings"
                android:contentDescription="@string/settings"
                android:clickable="true"
                android:focusable="true" />

            <!-- Spacer to push nothing to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


        <!-- KPI Row Container -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:weightSum="4">

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardTotalLeases"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"/>

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardTotalMaintenance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"/>

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardTotalPayments"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"/>

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardOccupancy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnExportPdf"
            android:text="Export PDF Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>


        <!-- Alerts -->
        <TextView
            android:id="@+id/tvAlertsHeader"
            android:text="Alerts"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:padding="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:id="@+id/alertsSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAlerts"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Recent Items -->
        <TextView
            android:id="@+id/tvRecentHeader"
            android:text="Recent Items"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:padding="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:id="@+id/recentSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Leases -->
            <TextView
                android:id="@+id/tvLeasesHeader"
                android:text="Leases"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:padding="8dp"/>
            <LinearLayout
                android:id="@+id/leasesSection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLeases"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Maintenance -->
            <TextView
                android:id="@+id/tvMaintenanceHeader"
                android:text="Maintenance"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:padding="8dp"/>
            <LinearLayout
                android:id="@+id/maintenanceSection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMaintenance"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Payments -->
            <TextView
                android:id="@+id/tvPaymentsHeader"
                android:text="Payments"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:padding="8dp"/>
            <LinearLayout
                android:id="@+id/paymentsSection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPayments"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Payment Trends Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartPaymentTrends"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Lease Expiration Chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartLeaseExpiry"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>
</ScrollView>
