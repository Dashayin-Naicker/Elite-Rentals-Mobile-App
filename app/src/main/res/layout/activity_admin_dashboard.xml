<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:text="Admin Dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:fontFamily="sans-serif-medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/notifications"
                android:contentDescription="@string/notifications"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/settings"
                android:contentDescription="@string/settings" />
        </LinearLayout>

        <!-- KPI CARDS -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:gravity="center"
            android:padding="4dp">

            <include
                layout="@layout/kpi_card"
                android:id="@+id/cardTotalLeases"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:layout_marginEnd="6dp"/>

            <include
                layout="@layout/kpi_card"
                android:id="@+id/cardTotalMaintenance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:layout_marginEnd="6dp"/>

            <include
                layout="@layout/kpi_card"
                android:id="@+id/cardTotalPayments"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:layout_marginEnd="6dp"/>

            <include
                layout="@layout/kpi_card"
                android:id="@+id/cardOccupancy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"/>
        </LinearLayout>

        <!-- Export Button -->
        <Button
            android:id="@+id/btnExportPdf"
            android:text="Export PDF Report"
            android:backgroundTint="#1A237E"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingVertical="12dp"
            android:elevation="4dp" />

        <!-- Alerts Header -->
        <TextView
            android:id="@+id/tvAlertsHeader"
            android:text="Alerts"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1D1D1"/>

        <LinearLayout
            android:id="@+id/alertsSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Recent Items Header -->
        <TextView
            android:id="@+id/tvRecentHeader"
            android:text="Recent Items"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1D1D1"/>

        <!-- RECENT ITEMS SECTIONS -->
        <LinearLayout
            android:id="@+id/recentSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <!-- LEASES -->
            <TextView
                android:id="@+id/tvLeasesHeader"
                android:text="Leases"
                android:textStyle="bold"
                android:textColor="#424242"
                android:padding="8dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/leasesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLeases"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- MAINTENANCE -->
            <TextView
                android:id="@+id/tvMaintenanceHeader"
                android:text="Maintenance"
                android:textStyle="bold"
                android:textColor="#424242"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/arrow_down_float"/>

            <LinearLayout
                android:id="@+id/maintenanceSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMaintenance"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- PAYMENTS -->
            <TextView
                android:id="@+id/tvPaymentsHeader"
                android:text="Payments"
                android:textStyle="bold"
                android:textColor="#424242"
                android:padding="8dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/paymentsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPayments"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Charts -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartPaymentTrends"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartLeaseExpiry"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>
