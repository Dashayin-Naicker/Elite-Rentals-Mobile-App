<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Row - BLUE THEME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:background="@drawable/header_gradient"
            android:padding="12dp"
            android:elevation="8dp"
            android:outlineProvider="bounds">

            <TextView
                android:id="@+id/tvTitle"
                android:text="Admin Dashboard"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/notifications"
                android:contentDescription="@string/notifications"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_pulse"/>

            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/settings"
                android:contentDescription="@string/settings"
                android:background="@drawable/circle_ripple"/>
        </LinearLayout>

        <!-- KPI CARDS - 2x2 LAYOUT -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- First Row: 2 Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardTotalLeases"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card_gradient_1"
                    android:elevation="12dp"
                    android:rotation="0.5"/>

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardTotalMaintenance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/card_gradient_2"
                    android:elevation="12dp"
                    android:rotation="-0.5"/>
            </LinearLayout>

            <!-- Second Row: 2 Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardTotalPayments"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card_gradient_3"
                    android:elevation="12dp"
                    android:rotation="0.3"/>

                <include
                    layout="@layout/kpi_card"
                    android:id="@+id/cardOccupancy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/card_gradient_4"
                    android:elevation="12dp"
                    android:rotation="-0.3"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Rest of your layout remains exactly the same -->
        <!-- Export Button - BLUE THEME -->
        <Button
            android:id="@+id/btnExportPdf"
            android:text="ðŸš€ Export PDF Report âœ¨"
            android:background="@drawable/button_gradient"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingVertical="16dp"
            android:elevation="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"/>

        <!-- Alerts Header - BLUE THEME -->
        <TextView
            android:id="@+id/tvAlertsHeader"
            android:text="ðŸ”” Alerts ðŸš¨"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:padding="16dp"
            android:layout_marginTop="28dp"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_header_gradient"
            android:elevation="4dp"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider_gradient"/>

        <LinearLayout
            android:id="@+id/alertsSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:background="@drawable/section_background"
            android:padding="8dp"
            android:elevation="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Recent Items Header - BLUE THEME -->
        <TextView
            android:id="@+id/tvRecentHeader"
            android:text="ðŸ“Š Recent Items ðŸ†•"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_marginTop="28dp"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_header_gradient"
            android:elevation="4dp"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider_gradient"/>

        <!-- RECENT ITEMS SECTIONS - BLUE THEME -->
        <LinearLayout
            android:id="@+id/recentSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:background="@drawable/section_background"
            android:padding="12dp"
            android:elevation="6dp">

            <!-- LEASES -->
            <TextView
                android:id="@+id/tvLeasesHeader"
                android:text="ðŸ“‘ Leases"
                android:textStyle="bold"
                android:textColor="#2979FF"
                android:padding="12dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/subheader_gradient_blue"
                android:elevation="2dp"/>

            <LinearLayout
                android:id="@+id/leasesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/item_background_blue">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLeases"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- MAINTENANCE -->
            <TextView
                android:id="@+id/tvMaintenanceHeader"
                android:text="ðŸ”§ Maintenance"
                android:textStyle="bold"
                android:textColor="#2979FF"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:background="@drawable/subheader_gradient_blue_light"
                android:elevation="2dp"/>

            <LinearLayout
                android:id="@+id/maintenanceSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/item_background_blue_light">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMaintenance"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- PAYMENTS -->
            <TextView
                android:id="@+id/tvPaymentsHeader"
                android:text="ðŸ’° Payments"
                android:textStyle="bold"
                android:textColor="#2979FF"
                android:padding="12dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/subheader_gradient_blue_dark"
                android:elevation="2dp"/>

            <LinearLayout
                android:id="@+id/paymentsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/item_background_dark">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPayments"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Charts - BLUE THEME -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartPaymentTrends"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/chart_background"
            android:elevation="12dp"
            android:padding="8dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartLeaseExpiry"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/chart_background"
            android:elevation="12dp"
            android:padding="8dp"/>
    </LinearLayout>
</ScrollView>