<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Tenant Name -->
        <TextView
            android:id="@+id/tvTenantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary" />

        <!-- Tenant Email -->
        <TextView
            android:id="@+id/tvTenantEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tenant@email.com"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvTenantStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approval: Pending | Active: false"
            android:textSize="13sp"
            android:textColor="#666666" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textColor="@android:color/white"
                app:backgroundTint="#2979FF"
                app:cornerRadius="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable"
                android:textColor="@android:color/white"
                app:backgroundTint="#4CAF50"
                app:cornerRadius="8dp"
                android:layout_marginStart="12dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
