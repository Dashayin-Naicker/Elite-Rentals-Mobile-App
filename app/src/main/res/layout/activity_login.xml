<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@color/brandBlue"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/textTitle"
            android:layout_marginBottom="24dp" />

        <!-- Username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/brandBlue"
            app:boxBackgroundColor="@color/boxBackground"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_username"
                android:inputType="textEmailAddress"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/brandBlue"
            app:boxBackgroundColor="@color/boxBackground"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_login"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="0dp"
            android:layout_marginTop="24dp"
            app:backgroundTint="@color/brandBlue"
            app:cornerRadius="8dp" />

        <!-- Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divider_or"
            android:textStyle="bold"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <!-- Google Login -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_google_login"
            android:textColor="@color/textPrimary"
            android:textSize="12sp"
            android:padding="0dp"
            android:layout_marginTop="12dp"
            app:icon="@drawable/google"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="32dp"
            app:iconTint="@null"
            app:backgroundTint="@color/boxBackground"
            app:cornerRadius="8dp" />

        <!-- Fingerprint Login -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFingerprint"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_fingerprint_login"
            android:textColor="@color/textPrimary"
            android:textSize="12sp"
            android:padding="0dp"
            android:layout_marginTop="12dp"
            app:icon="@drawable/fingerprint"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="32dp"
            app:iconTint="@null"
            app:backgroundTint="@color/boxBackground"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
